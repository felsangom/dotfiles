{
  "diagnostic.enable": true,
  "diagnostic-languageserver.linters": {
    "rubocop": {
      "command": "rubocop",
      "sourceName": "rubocop",
      "debounce": 100,
      "args": [
        "--format",
        "json",
        "--force-exclusion",
        "%filepath"
      ],
      "parseJson": {
        "errorsRoot": "files[0].offenses",
        "line": "location.line",
        "column": "location.column",
        "message": "[${cop_name}] ${message}",
        "security": "severity"
      },
      "securities": {
        "fatal": "error",
        "warning": "warning"
      }
    }
  },
  "diagnostic-languageserver.filetypes": {
    "ruby": "rubocop"
  }
}
